<div class="container mt-5">
  <h1>Add a New Book for <%= current_user.name %></h1>

  <%= form_with(model: @book, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :author, class: "form-label" %>
      <%= form.text_field :author, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :genre, class: "form-label" %>
      <%= form.text_field :genre, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :notes, class: "form-label" %>
      <%= form.text_area :notes, class: "form-control" %>
    </div>

    <%= form.submit "Create Book", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to Books", books_path, class: "btn btn-secondary mt-3" %>
</div>
