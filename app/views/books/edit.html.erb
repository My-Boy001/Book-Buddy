<div class="container mt-5">
  <h1>Edit Book: <%= @book.title %></h1>

  <%= form_with(model: @book, local: true) do |form| %>
    <% if @book.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :author %>
      <%= form.text_field :author, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :genre %>
      <%= form.text_field :genre, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :notes %>
      <%= form.text_area :notes, class: "form-control" %>
    </div>

    <%= form.submit "Update Book", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to Books", books_path, class: "btn btn-secondary mt-3" %>
</div>
