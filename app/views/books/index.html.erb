<div class="container mt-5">
  <h1>Books for <%= current_user.name %></h1>

  <% flash.each do |key, message| %>
    <div class="alert alert-<%= key == "alert" ? "danger" : "success" %> alert-dismissible fade show" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <% if @books.any? %>
    <ul class="list-group">
      <% @books.each do |book| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= book.title %></strong> by <%= book.author %>
          </div>
          <%= link_to "View", book_path(book), class: "btn btn-sm btn-primary" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No books found for this user.</p>
  <% end %>

  <%= link_to "Add New Book", new_book_path, class: "btn btn-success mt-3" %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
