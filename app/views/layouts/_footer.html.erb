<footer style="
  background: linear-gradient(to right, #1e3c72, #2a5298);
  color: #fff;
  padding: 2rem 0;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
">
  <div style="
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  ">
    <div style="
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    ">
      <div style="
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      ">
        <span style="
          font-size: 0.95rem;
          color: rgba(255, 255, 255, 0.9);
        ">&copy; 2025 BookBuddy. All rights reserved.</span>
        <span style="
          font-size: 0.9rem;
          color: rgba(255, 255, 255, 0.8);
          display: flex;
          align-items: center;
          gap: 0.5rem;
        ">
          Made with 
          <i class="fas fa-heart" style="
            color: #ff4d4d;
            animation: heartbeat 1.5s ease-in-out infinite;
          "></i> 
          for book lovers
        </span>
      </div>
      <div style="
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      ">
        <span style="
          background: rgba(255, 255, 255, 0.1);
          padding: 0.5rem 1rem;
          border-radius: 2rem;
          font-size: 0.9rem;
          display: flex;
          align-items: center;
          gap: 0.5rem;
          backdrop-filter: blur(4px);
          transition: all 0.3s ease;
        " onmouseover="this.style.background='rgba(255, 255, 255, 0.2)'" 
          onmouseout="this.style.background='rgba(255, 255, 255, 0.1)'">
          <i class="fas fa-shield-alt" style="color: #4CAF50;"></i> Secure
        </span>
        <span style="
          background: rgba(255, 255, 255, 0.1);
          padding: 0.5rem 1rem;
          border-radius: 2rem;
          font-size: 0.9rem;
          display: flex;
          align-items: center;
          gap: 0.5rem;
          backdrop-filter: blur(4px);
          transition: all 0.3s ease;
        " onmouseover="this.style.background='rgba(255, 255, 255, 0.2)'" 
          onmouseout="this.style.background='rgba(255, 255, 255, 0.1)'">
          <i class="fas fa-lock" style="color: #2196F3;"></i> Private
        </span>
        <span style="
          background: rgba(255, 255, 255, 0.1);
          padding: 0.5rem 1rem;
          border-radius: 2rem;
          font-size: 0.9rem;
          display: flex;
          align-items: center;
          gap: 0.5rem;
          backdrop-filter: blur(4px);
          transition: all 0.3s ease;
        " onmouseover="this.style.background='rgba(255, 255, 255, 0.2)'" 
          onmouseout="this.style.background='rgba(255, 255, 255, 0.1)'">
          <i class="fas fa-globe" style="color: #FFC107;"></i> Global
        </span>
      </div>
    </div>
  </div>

  <style>
    @keyframes heartbeat {
      0% { transform: scale(1); }
      14% { transform: scale(1.3); }
      28% { transform: scale(1); }
      42% { transform: scale(1.3); }
      70% { transform: scale(1); }
    }

    @media (max-width: 768px) {
      footer > div > div {
        flex-direction: column;
        text-align: center;
        align-items: center;
      }
      
      footer > div > div > div:last-child {
        justify-content: center;
      }
    }
  </style>
</footer>

