<%= stylesheet_link_tag 'user', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="profile-container">
  <div class="user-profile-card">
    <div class="profile-header">
      <div class="profile-avatar">
        <i class="fas fa-user"></i>
      </div>
      <h1 class="profile-name"><%= @user.name %></h1>
      <p class="profile-email"><%= @user.email %></p>
    </div>

    <div class="profile-stats">
      <div class="stat-item">
        <i class="fas fa-book"></i>
        <span class="stat-value">12</span>
        <span class="stat-label">Books Read</span>
      </div>
      <div class="stat-item">
        <i class="fas fa-bookmark"></i>
        <span class="stat-value">5</span>
        <span class="stat-label">Reading List</span>
      </div>
      <div class="stat-item">
        <i class="fas fa-star"></i>
        <span class="stat-value">8</span>
        <span class="stat-label">Reviews</span>
      </div>
    </div>

    <div class="profile-actions">
      <button class="btn-edit-profile">
        <i class="fas fa-edit"></i>
        Edit Profile
      </button>
      <button class="btn-view-activity">
        <i class="fas fa-chart-line"></i>
        View Activity
      </button>
    </div>

    <div class="profile-details">
      <div class="detail-item">
        <i class="fas fa-user-circle"></i>
        <div class="detail-content">
          <span class="detail-label">Full Name</span>
          <span class="detail-value"><%= @user.name %></span>
        </div>
      </div>
      <div class="detail-item">
        <i class="fas fa-envelope"></i>
        <div class="detail-content">
          <span class="detail-label">Email Address</span>
          <span class="detail-value"><%= @user.email %></span>
        </div>
      </div>
      <div class="detail-item">
        <i class="fas fa-calendar-alt"></i>
        <div class="detail-content">
          <span class="detail-label">Member Since</span>
          <span class="detail-value"><%= @user.created_at.strftime("%B %d, %Y") %></span>
        </div>
      </div>
      <div class="detail-item">
        <i class="fas fa-clock"></i>
        <div class="detail-content">
          <span class="detail-label">Last Active</span>
          <span class="detail-value"><%= @user.updated_at.strftime("%B %d, %Y") %></span>
        </div>
      </div>
    </div>
  </div>
</div>
