<div class="login-container">
  <div class="card glass shadow">
    <div class="login-header">
      <h2 class="text-center mb-4 fw-bold">üîê Welcome Back!</h2>
      <p class="text-center text-muted">Sign in to continue to BookBuddy</p>
    </div>

    <%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key == "alert" ? "danger" : "success" %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <div class="social-login">
      <button type="button" class="btn btn-google btn-lg">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google logo" />
        Continue with Google
      </button>
    </div>

    <div class="divider">
      <span>or sign in with email</span>
    </div>

    <%= form_with url: login_path, method: :post, local: true, class: "login-form" do |f| %>
      <div class="form-floating mb-3">
        <%= f.email_field :email, class: "form-control", id: "emailInput", placeholder: "name@example.com" %>
        <%= f.label :email, "Email address", for: "emailInput" %>
      </div>
      
      <div class="form-floating mb-3">
        <%= f.password_field :password, class: "form-control", id: "passwordInput", placeholder: "Password" %>
        <%= f.label :password, "Password", for: "passwordInput" %>
      </div>

      <div class="d-grid gap-2 mb-3">
        <%= f.submit "Sign In", class: "btn btn-gradient btn-lg" %>
      </div>
    <% end %>

    <div class="login-footer text-center">
      <%= link_to "Forgot Password?", "#", class: "btn btn-link" %>
      <p class="mt-3">
        New to BookBuddy?
        <%= link_to "Create an account", signup_path, class: "btn btn-sm btn-outline-secondary ms-2" %>
      </p>
    </div>
  </div>
</div>
