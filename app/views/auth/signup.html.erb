
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<div style="background: linear-gradient(135deg, #1e3c72, #2a5298); min-height: 100vh; display: flex; justify-content: center; align-items: center; padding: 40px;">
  <div class="card shadow p-5" style="width: 100%; max-width: 500px;">
    <h2 class="text-center mb-4 fw-bold text-dark">📝 Create Your Account</h2>
    
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key == "alert" ? "warning" : key == "notice" ? "success" : "info" %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: signup_path, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Your full name" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
      </div>

      <div class="d-grid gap-2 mb-3">
        <%= f.submit "Sign Up", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <p>Already have an account?
        <%= link_to "Login", login_path, class: "btn btn-sm btn-outline-primary ms-2" %>
      </p>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
