<div class="card glass shadow">
  <div class="text-center mb-4">

  </div>
        <%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>

  <h2 class="text-center mb-4 fw-bold">📝 Create Your Account</h2>
  <div class="d-grid gap-2 mb-3">
    <button type="button" class="btn btn-google btn-lg" disabled>
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google logo" />
      Continue with Google
    </button>
  </div>
  <div class="divider">or</div>
  <%= form_with model: @user, url: signup_path, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Your full name" %>
    </div>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
    </div>
    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
    </div>
    <div class="d-grid gap-2 mb-3">
      <%= f.submit "Sign Up", class: "btn btn-gradient btn-lg" %>
    </div>
  <% end %>

  <div class="text-center">
    <p>Already have an account?
      <%= link_to "Login", login_path, class: "btn btn-sm btn-outline-primary ms-2" %>
    </p>
  </div>
</div>
